    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent" style="background:rgba(0,0,0,0.5)">
        <div class="container d-flex justify-content-between align-items-center">
            <div id="logo">
                @*<a href="index.html"><img src="assets/img/logo.png" alt=""></a>*@
                <!-- Uncomment below if you prefer to use a text logo -->
                <h1><a href="~/Home/Index">CUASNEAKER</a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="~/Home/Index#hero">Home</a></li>
                    <li><a class="nav-link scrollto" href="~/Home/Index#about">About</a></li>
                    <li><a class="nav-link scrollto" href="~/Home/Index#portfolio">Product</a></li>
                    <li><a class="nav-link scrollto" href="~/Home/Index#contact">Contact</a></li>
                    @RenderSection("Search", required: false)
                    @if (Session["Email"] != null)
                    {
                        <li>
                            <a class="nav-link scrollto">@Session["Fullname"]</a>
                        </li>
                        <li>
                            <a class="nav-link scrollto" href="~/Accounts/Logout">Logout</a>
                        </li>
 }
                    else
                    {
                        <li>

                            <a class="nav-link scrollto" href="~/Accounts/Create">Signup</a>
                        </li>
                        <li>

                            <a class="nav-link scrollto" href="~/Accounts/Login">Login</a>
                        </li>
}
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->

    @RenderBody()
    <div style="font-size: 30px;background-color:black;color:aliceblue;text-align:center">
        <!-- ======= Footer ======= -->
        <footer id="footer">
            <div class="container">
                <div class="copyright">
                    &copy; Copyright <strong> Lê Thanh Thái</strong>
                </div>
                <strong> @DateTime.Now.Year </strong>

                <div class="credits">
                    <!--
                      All the links in the footer should remain intact.
                      You can delete the links only if you purchased the pro version.
                      Licensing information: https://bootstrapmade.com/license/
                      Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=Regna
                    -->
                    @*Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>*@
                </div>
            </div>
        </footer><!-- End Footer -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/purecounter/purecounter.js"></script>
    <script src="~/assets/js/iziToast.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
